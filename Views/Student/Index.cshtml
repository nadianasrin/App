@model Student

@{
    ViewData["Title"] = "Enrollment Form";
    Layout = "_LayoutStudent";
}

<div class="row">
    <br>
    <div class="center-align">
        <h5 class="orange-text text-darken-3">Enrollment form</h5>
    </div>
    <div class="card col s12 l10 offset-l1 offset-m1 z-depth-2 card-border">
        <div class="card-content">
            <form method="POST">
                <div class="row">
                    <div class="input-field col s12 l12">
                        <input asp-for="Registration.StudentVarsityId" type="text" class="validate" value="@Model.Registration.StudentVarsityId" readonly>
                        <label class="active" asp-for="Registration.StudentVarsityId">Student Id</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12 l12">
                        <input id="last_name" type="text" value="@Model.Semester.SemesterName" readonly>
                        <label class="active" for="last_name">Current Semester Name</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <select asp-for="Batch" asp-items="Model.Batches">
                            <option value="" disabled selected>Choose your option</option>
                        </select>
                        <label asp-for="Batch">Choose Batch</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <select asp-for="Course.SemesterNumber" asp-items="Model.Semesters" id="cc">
                            <option value="" disabled selected>Choose your option</option>
                        </select>
                        <label asp-for="Course.SemesterNumber">Select desired semester to enroll</label>
                    </div>
                </div>
                
                <div class="row" id="viewCourseCodeField">
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <select asp-for="Section" asp-items="Model.Sections">
                            <option value="" disabled selected>Choose your option</option>
                        </select>
                        <label>Select Section</label>
                    </div>
                </div>
                <div class="row">
                    <div class="center-align">
                        <button type="submit" class="btn purple darken-4">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/src/studentForm.js"></script>