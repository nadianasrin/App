<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
     <title>@ViewData["Title"]</title>
    <link rel="icon" href="~/img/cadetkid.png">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=El+Messiri&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/materializecss.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body>
    <div id="loader-wrapper">
        <div id="loader"></div>
        <div class="loader-section section-left"></div>
        <div class="loader-section section-right"></div>
    </div>
    <header>
        <nav class="nav-extended nav-fixed purple darken-4 z-depth-2">
            <div class="nav-wrapper">
                <a class="brand-logo" id="cpa-logo"><i class="material-icons" id="logo-icon">select_all</i>CadetKid</a>
                <a href="#" class="sidenav-trigger" data-target="mobile-nav">
                    <i class="material-icons">menu</i>
                </a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a asp-controller="Account" asp-action="Login" class="btn-flat" id="square-signin">SignIn</a></li>
                    <li><a asp-controller="Account" asp-action="Register" class="btn-flat" id="square-signup">SignUp</a></li>
                </ul>
            </div>
        </nav>
        <ul class="sidenav" id="mobile-nav">
            <li><a asp-controller="Account" asp-action="Register" >SignUp</a></li>
            <li><a asp-controller="Account" asp-action="Login">SignIn</a></li>
        </ul>
    </header>

    <div class="container">
        @RenderBody()
        </div>

    <script src="~/js/jquery.min.js" asp-append-version="true"></script>
    <script src="~/js/materialize.js" asp-append-version="true"></script>
    <script src="~/js/plugin.js" asp-append-version="true"></script>

     @RenderSection("Scripts", required: false)
</body>

</html>